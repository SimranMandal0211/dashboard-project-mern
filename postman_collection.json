{
  "info": {
    "name": "Auth + Posts API",
    "description": "Postman collection for user signup/login and posts CRUD APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/signup",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Create Post",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Post\",\n  \"content\": \"This is my post content.\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/posts",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "posts"]
            }
          }
        },
        {
          "name": "Get All Posts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/api/posts",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "posts"]
            }
          }
        },
        {
          "name": "Get Single Post",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:5000/api/posts/:id",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "posts", ":id"]
            }
          }
        },
        {
          "name": "Update Post",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Post\",\n  \"content\": \"Updated content.\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/posts/:id",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "posts", ":id"]
            }
          }
        },
        {
          "name": "Delete Post",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "http://localhost:5000/api/posts/:id",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "posts", ":id"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": ""
    }
  ]
}
